<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
    </style>

    <!-- Style for BottomNavigationView -->
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextAppearance</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextAppearance</item>
    </style>

    <style name="BottomNavigationViewTextAppearance">
        <item name="android:textSize">0sp</item> <!-- Hides text -->
        <item name="android:textColor">@android:color/transparent</item> <!-- Ensures text color is transparent -->
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/mcdo</item>
        <!-- Other style attributes -->
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <!-- Control the behavior and appearance of the selected item -->
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>

    <style name="CustomAlertDialog">
        <item name="android:background">@color/mcdo</item> <!-- Yellow background -->
        <item name="android:textColorPrimary">@color/black</item> <!-- Black text color -->
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

</resources>
